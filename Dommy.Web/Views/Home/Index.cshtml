@model Dommy.Web.Models.HomeIndexModel
@{
    Layout = "~/views/shared/_Layout.cshtml";
}

<h1>Dommy</h1>

<script src="Scripts/Tile.js" type="text/javascript"></script>
<div class="gridMenu">
    @foreach (var sectionModel in Model.Sections)
    {
        <a class="menu @sectionModel.Color.ToString().LowerFirstChar()" href="#section@(sectionModel.Id)">
            <span class="id" style="display:none">@sectionModel.Id</span>
            <div class="backColor borderColor">
                <div class="back">
                    @sectionModel.Name
                </div>
            </div>
            <div class="borderColor arrowRight">

            </div>
        </a>
    }
</div>

<div class="grid">
    @foreach (var sectionModel in Model.Sections)
    {
        <div id="section@(sectionModel.Id)" class="gridSection">
            @foreach (var tile in sectionModel.Tiles)
            {
                Html.RenderPartial("Tile", tile);
            }

            <div class="clear"></div>
        </div>
    }
</div>